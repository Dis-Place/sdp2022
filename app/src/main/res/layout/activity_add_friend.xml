<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.friendInvites.AddFriendActivity">

    <Button
        android:id="@+id/sendFriendRequestButton"
        android:layout_width="188dp"
        android:layout_height="70dp"
        android:layout_marginBottom="388dp"
        android:onClick="sendFriendRequest"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friendRequestEditText" />

    <EditText
        android:id="@+id/friendRequestEditText"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="55dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Friend Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sendFriendRequestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
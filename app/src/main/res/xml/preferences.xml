<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:title="Sound effects"

        android:defaultValue="true"
        android:key="@string/sfx" />

    <SwitchPreference
        android:title="Music"

        android:defaultValue="true"
        android:key="@string/music" />

    <ListPreference
        android:contentDescription="theme button"
        android:defaultValue="purple"
        android:entries="@array/theme_entries"
        android:entryValues="@array/theme_entry_values"
        android:key="themeKey"
        android:summary="Choose your theme"
        android:title="Select theme" />

</PreferenceScreen>